{
  "name": "@khadkasaroj/mention-editor",
  "version": "1.0.2",
  "description": "A rich text editor with @mention support for React applications",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup && cp src/styles.css dist/styles.css",
    "dev": "tsup --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "mention",
    "editor",
    "contenteditable",
    "rich-text",
    "typescript"
  ],
  "author": "Saroj khadka",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Sarojkhadka1995/mention-editor"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "class-variance-authority": "^0.7.1"
  }
}
